    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/day2"
        android:textSize="20sp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/day3"
        android:textSize="20sp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/day4"
        android:textSize="20sp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/day5"
        android:textSize="20sp">
    </TextView>

</LinearLayout>

</ScrollView>